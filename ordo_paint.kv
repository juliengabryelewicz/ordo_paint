<PaintScreen>:
	id: paint_screen
	name: 'PaintScreen'
    BoxLayout:
        orientation:"horizontal"
        PaintWidget:
            id: paint_widget
            size_hint: (.9, 1)
        BoxLayout:
            orientation:"vertical"
            size_hint: (.1, 1)
            Button:
                text:'Blanc'
                background_color:(1.0, 0.95, 0.95, 1.0)
                size_hint:None, 60
                on_press: paint_widget.change_color((1.0, 0.95, 0.95, 1.0))
            Button:
                text:'Vert'
                background_color:(0, 1.0, 0, 1.0)
                size_hint:None, 60
                on_press: paint_widget.change_color((0, 1.0, 0, 1.0))
            Button:
                text:'Bleu'
                background_color:(0, 0, 1.0, 1.0)
                size_hint:None, 60
                on_press: paint_widget.change_color((0, 0, 1.0, 1.0))
            Button:
                text:'Rouge'
                background_color:(1.0, 0, 0, 1.0)
                size_hint:None, 60
                on_press: paint_widget.change_color((1.0, 0, 0, 1.0))
            Button:
                text:'Jaune'
                background_color:(1.0, 1.0, 0, 1.0)
                size_hint:None, 60
                on_press: paint_widget.change_color((1.0, 1.0, 0, 1.0))
            Button:
                text:'Orange'
                background_color:(1.0, 0.65, 0, 1.0)
                size_hint:None, 60
                on_press: paint_widget.change_color((1.0, 0.65, 0, 1.0))
            Button:
                text:'Violet'
                background_color:(0.5, 0, 0.5, 1.0)
                size_hint:None, 60
                on_press: paint_widget.change_color((0.5, 0, 0.5, 1.0))
            Button:
                text:'Rose'
                background_color:(1.0, 0.7, 0.75, 1.0)
                size_hint:None, 60
                on_press: paint_widget.change_color((1, 0.7, 0.75, 1.0))
            Button:
                text:'Marron'
                background_color:(0.65, 0.2, 0.2, 1.0)
                size_hint:None, 60
                on_press: paint_widget.change_color((0.65, 0.2, 0.2, 1.0))
            Button:
                text: "Effacer"
                on_press: paint_screen.clear_canvas()
                size_hint:None, 60